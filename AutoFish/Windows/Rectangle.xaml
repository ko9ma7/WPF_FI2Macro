<Window x:Class="AutoFish.Retangle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoFish"
        mc:Ignorable="d"
        Title="Finder" Height="300" Width="300" WindowStyle="None" AllowsTransparency="True" WindowState="Normal" ResizeMode="CanResizeWithGrip">
    <Window.Background>
        <SolidColorBrush Opacity="0.1" Color="White"/>
    </Window.Background>
    <Grid x:Name="FinderGrid" >
        <Canvas Name="CanvasMain" Background="Transparent" SizeChanged="WindowSizeChanged">
            <Border Name="RecodBorderSizeObject" BorderBrush="Red" BorderThickness="3" Width="300" Height="300"/>
        </Canvas>
    </Grid>
</Window>
